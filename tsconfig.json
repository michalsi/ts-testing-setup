{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    /* Base Options from @tsconfig/node20 */
    /* Type Definitions */
    "types": [
      "jest",
      "node"
    ],
    /* Path Configuration */
    "outDir": "./dist",
    "rootDir": "./src",
    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    /* Module Resolution */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    /* Advanced */
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}